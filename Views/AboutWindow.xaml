<Window x:Class="Interweb_Searcher.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Interweb Searcher" Height="300" Width="450"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Icon column -->
            <ColumnDefinition Width="*"/>
            <!-- Text column -->
        </Grid.ColumnDefinitions>

        <!-- Larger App Icon -->
        <Image Grid.Column="0"
               Width="128" Height="128"
               VerticalAlignment="Center"
               Margin="0,0,20,0"
               Stretch="Uniform"
               Source="pack://application:,,,/Images/Icon.ico"/>

        <!-- Info Stack -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <TextBlock Text="Interweb Searcher" FontSize="24" FontWeight="Bold" Margin="0 10"/>
            <TextBlock Text="Version 2.0" FontSize="14" Margin="0 5"/>
            <TextBlock Text="AGG Productions Copyright © 2025" FontSize="12" Margin="0 5"/>
            <TextBlock Text="Built with WPF + MVVM" FontSize="12" Margin="0 10"/>
        </StackPanel>
    </Grid>
</Window>
